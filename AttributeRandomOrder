package com.codegym.lessons;

public class User {
	String name;
	short age;
	int height;
	
	public void getAttributes(String name, short age, int height) {
		this.name = name;
		this.age = age;
		this.height = height;
	}
	
	public User(String name, short age, int height){
		this.getAttributes(name, age, height);
	}
	
		
	public User(String name, int height, short age){
		this.getAttributes(name, age, height);
	}
	
		
	public User(short age, int height, String name){
		this.getAttributes(name, age, height);
	}
	
	
	public User(short age, String name, int height){
		this.getAttributes(name, age, height);	
	}
	
	public User(int height, String name, short age){
		this.getAttributes(name, age, height);
	}
	
	public User(int height, short age, String name){
		this.getAttributes(name, age, height);	
	}
	

	
	public static void main(String[] args) {
		User dann = new User("Dann", 180, (short)25);
		User maria = new User((short)20, "Maria", 165);
		User david = new User("Davd", (short)28, 170);
		User jhon = new User(168, (short)234, "Jhon");
		
		
		System.out.println("User name: " + dann.name);
		System.out.println("User age: " + dann.age);
		System.out.println("User heigh: " + dann.height);
		System.out.println();		
		
		System.out.println("User name: " + maria.name);
		System.out.println("User age: " + maria.age);
		System.out.println("User heigh: " + maria.height);
		System.out.println();
		
		System.out.println("User name: " + david.name);
		System.out.println("User age: " + david.age);
		System.out.println("User heigh: " + david.height);
		System.out.println();
		
		System.out.println("User name: " + jhon.name);
		System.out.println("User age: " + jhon.age);
		System.out.println("User heigh: " + jhon.height);
		System.out.println();

	
	}

}
